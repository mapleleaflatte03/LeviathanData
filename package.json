    "pino": "^9.5.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.3",
    "puppeteer": "^23.2.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0"
